<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_gravity="center_horizontal|center_vertical"
        android:elevation="@dimen/cardview_default_elevation"
        android:padding="16dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_card_detail"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/aku" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp">
            <TableRow
                android:id="@+id/profil_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:text="@string/pr_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="8dp"
                    android:text="Winar Wahyu W."/>
            </TableRow>
            <TableRow
                android:id="@+id/pr_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:text="@string/pr_address"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="8dp"
                    android:text="Ambarawa"/>
            </TableRow>
            <TableRow
                android:id="@+id/profil_hobby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:text="@string/pr_hobby"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="8dp"
                    android:text="Tidak ada"/>
            </TableRow>
            <TableRow
                android:id="@+id/profil_quotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:text="@string/pr_quotes"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="8dp"
                    android:layout_span="5"
                    android:maxLines="2"
                    android:text="Don't call it a dream, call it a plan"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>

</FrameLayout>